/* pages/studyroom/index.wxss */
page{
  width: 100%;
  height: 100%;
  display: flex;
  flex-flow: column nowrap;
}

#options{
  width: 100%;
   height: 206rpx;
  font-size: 30rpx;
  line-height: 63rpx;
}

.option{
  box-sizing: border-box;
  background: #0b8bf0;
  width: 50%;
  height: 50%;
  color: white;
  display: flex;
  flex-flow: row nowrap;
  border: 1px solid #0b8bf0;
  float: left;
}

.option-name{
  width: 130px;
}

.option-content{
  width: 245px;
  background: #096dbc;
  margin: 20rpx 25rpx 20rpx 0;
  border-radius: 5px;
}

.option-name, .option-content{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

#studyrooms{
  background: #eee;
  height: 0;
  padding-top: 10px;
  font-size: smaller;
  line-height: 30px;
  text-align: center;
  flex-grow: 1;
}

.studyroom{
  float: left;
  width: 187.5rpx;
  height: 30px;
}
